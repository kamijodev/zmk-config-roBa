#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define MOUSE 4
#define SCROLL 5
#define NUM 6

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

/ {
    combos {
        compatible = "zmk,combos";

        mo4 {
            bindings = <&mo 4>;
            key-positions = <11 13>;
        };

        minus {
            bindings = <&kp MINUS>;
            key-positions = <20 21>;
        };

        eq {
            bindings = <&kp EQUAL>;
            key-positions = <32 33>;
        };

        mo5 {
            bindings = <&mo 5>;
            key-positions = <23 25>;
        };
    };

    macros {
        esc_lang2: esc_lang2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp ESCAPE &kp LANG2>;
            label = "ESC_LANG2";
        };
    };

    behaviors {
        hm: hm {
            compatible = "zmk,behavior-hold-tap";
            label = "HM";
            bindings = <&mt>, <&mkp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        hmacro: hmacro {
            compatible = "zmk,behavior-hold-tap";
            label = "HMACRO";
            bindings = <&mo>, <&esc_lang2>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q         &kp W  &kp E  &kp R      &kp T                                                &kp Y        &kp U  &kp I      &kp O    &kp P
&kp A         &kp S  &kp D  &kp F      &kp G      &hmacro 5 0                   &esc_lang2  &kp H        &kp J  &kp K      &kp L    &kp COLON
&kp Z         &kp X  &kp C  &kp V      &kp B      &mt LEFT_ALT LANG2            &kp LANG1   &kp N        &kp M  &kp COMMA  &kp DOT  &kp SLASH
&kp LEFT_GUI  &mo 5  &mo 4  &kp LCTRL  &kp SPACE  &mt LEFT_SHIFT BACKSPACE      &lt 2 TAB   &lt 1 ENTER                             &kp MINUS
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PAGE_DOWN>;
        };

        FUNCTION {
            bindings = <
&kp EXCLAMATION  &kp AT_SIGN  &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp PIPE                           &kp BACKSLASH  &kp DOUBLE_QUOTES  &kp SINGLE_QUOTE  &kp GRAVE  &kp TILDE
&kp HASH         &kp DOLLAR   &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp AMPERSAND  &trans      &trans  &kp LEFT       &kp DOWN           &kp UP_ARROW      &kp RIGHT  &kp SEMICOLON
&kp PERCENT      &kp CARET    &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp ASTERISK   &trans      &trans  &trans         &trans             &trans            &trans     &trans
&trans           &trans       &trans                &trans                 &trans         &trans      &trans  &trans                                                         &kp EQUAL
            >;
        };

        NUM {
            bindings = <
&kp F1        &kp F2        &kp F3        &kp F4        &kp F5                            &kp F6        &kp F7        &kp F8        &kp F9        &kp F10
&kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5  &trans      &trans  &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0
&trans        &trans        &trans        &trans        &trans        &trans      &trans  &trans        &trans        &trans        &kp F11       &kp F12
&trans        &trans        &trans        &trans        &trans        &trans      &trans  &trans                                                  &trans
            >;
        };

        layer_3 {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                          &trans
            >;
        };

        layer_4 {
            bindings = <
&trans  &trans  &mkp MB4   &mkp MB5   &trans                         &trans     &mkp MB4   &mkp MB5   &trans  &trans
&trans  &trans  &mkp LCLK  &mkp RCLK  &mkp MCLK  &trans      &trans  &mkp MCLK  &mkp LCLK  &mkp RCLK  &trans  &trans
&trans  &trans  &trans     &trans     &trans     &trans      &trans  &trans     &trans     &trans     &trans  &trans
&trans  &trans  &trans     &trans     &trans     &trans      &trans  &trans                                   &trans
            >;
        };

        layer_5 {
            bindings = <
&trans  &trans  &trans  &trans  &trans                      &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans                          &trans
            >;
        };
    };
};
